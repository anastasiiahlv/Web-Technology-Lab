@model ProjectManagementSystem.Models.Status

@{
    ViewData["Title"] = "Details";
}

<h2>Про статус завдання</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            Завдання
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var task in Model.Tasks)
                {
                    <li>
                        <a asp-controller="Tasks" asp-action="Details" asp-route-id="@task.Id">
                            @task.Name
                        </a>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Повернутись до статусів</a>
</div>
